{
  "name": "@voluntarily/vly2",
  "version": "1.0.0",
  "description": "Voluntari.ly Client based on Next.js",
  "main": "server/server.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test PORT=8080 node_modules/.bin/nyc node --no-deprecation node_modules/ava/cli.js",
    "watch:test": "npm run test -- --watch",
    "lint": "standard",
    "fix": "standard --fix",
    "dev": "nodemon -w server -w package.json server/server.js",
    "build": "next build && node ./x/default-lang",
    "heroku-postbuild": "next build",
    "start": "NODE_ENV=production node --experimental-modules server/server.js",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "docker-test:build": "docker build -t vly-test:latest -f Dockerfile-test . ",
    "docker-test": "docker run vly-test:latest "
  },
  "dependencies": {
    "@babel/core": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@zeit/next-less": "^1.0.1",
    "accepts": "^1.3.5",
    "antd": "^3.5.4",
    "auth0-js": "^9.10.2",
    "babel-plugin-import": "^1.7.0",
    "babel-plugin-react-intl": "^3.0.1",
    "babel-plugin-styled-components": "^1.10.0",
    "dotenv": "^7.0.0",
    "email-templates": "^5.0.5",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint-plugin-html": "^5.0.3",
    "express": "^4.16.4",
    "glob": "^7.1.3",
    "hoist-non-react-statics": "^3.3.0",
    "intl": "^1.2.5",
    "js-cookie": "^2.2.0",
    "jsdom": "^15.0.0",
    "jwt-decode": "^2.2.0",
    "less": "^3.9.0",
    "less-vars-to-js": "1.3.0",
    "limax": "^1.7.0",
    "lodash": "^4.17.11",
    "markdown-to-jsx": "^6.9.4",
    "mock-css-modules": "^1.0.0",
    "mongoose": "^5.5.4",
    "mongoose-crudify": "^0.2.0",
    "mongoose-id-validator": "^0.5.3",
    "next": "^8.1.0",
    "next-redux-wrapper": "^3.0.0-alpha.2",
    "next-routes": "^1.4.2",
    "nodemailer": "^6.1.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-intl": "^2.8.0",
    "react-redux": "^7.0.2",
    "redux": "^4.0.1",
    "redux-api": "^0.11.2",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0",
    "require-extension": "0.0.4",
    "sanitize-html": "^1.20.1",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@babel/register": "^7.4.4",
    "ava": "^1.4.1",
    "axios": "^0.18.0",
    "babel-eslint": "^10.0.1",
    "cross-env": "^5.2.0",
    "enzyme": "^3.9.0",
    "fetch-mock": "^7.3.3",
    "mongodb-memory-server": "^5.1.2",
    "nodemon": "^1.18.11",
    "nyc": "^14.1.0",
    "redux-mock-store": "^1.5.3",
    "sinon": "^7.3.2",
    "standard": "^12.0.1",
    "supertest": "^4.0.2",
    "uuid": "^3.3.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voluntarily/vly2.git"
  },
  "author": "Andrew Watkins",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/voluntarily/vly2/issues"
  },
  "homepage": "https://github.com/voluntarily/vly2#readme",
  "ava": {
    "files": [
      "**/__tests__/*.spec.js"
    ],    
    "helpers": [
      "**/*.fixture.js"
    ],
    "sources": [
      "components/**/*.js",
      "hocs/**/*.js",
      "lib/**/*.js",
      "pages/**/*.js",
      "server/**/*.js"
    ],
    "failFast": true,
    "babel": {
      "testOptions": {
        "plugins": [
          "@babel/plugin-syntax-jsx"
        ],
        "presets": [
          "next/babel"
        ]
      }
    },
    "require": [
      "./server/util/setup-test-env.js"
    ]
  },
  "nyc": {
    "include": [
      "pages/**/*.js",
      "components/**/*.js",
      "server/**/*.js",
      "lib/**/*.js"
    ],
    "exclude": [
      "**/*.spec.js",
      "server/util/setup-test-env.js",
      "server/util/test-helpers.js",
      "server/config.js"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ]
  },
  "standard": {
    "plugins": [
      "html"
    ],
    "parser": "babel-eslint"
  }
}
