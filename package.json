  "repository": {
    "type": "git",
    "url": "git+https://github.com/voluntarily/vly2.git"
  },
  "bugs": {
    "url": "https://github.com/voluntarily/vly2/issues"
  },
  "homepage": "https://github.com/voluntarily/vly2#readme",
  "nyc": {
    "extends": "@istanbuljs/nyc-config-babel",
    "ignore-class-method": "GetInitialProps",
    "watermarks": {
      "lines": [
        80,
        95
      ],
      "functions": [
        80,
        95
      ],
      "branches": [
        80,
        95
      ],
      "statements": [
        80,
        95
      ]
    },
    "include": [
      "pages/**/*.js",
      "pages/api/*.js",
      "components/**/*.js",
      "server/**/*.js",
      "lib/**/*.js"
    ],
    "exclude": [
      "**/__tests__/**",
      "**/*.stories.js",
      "**/*.spec.js",
      "**/*.fixture.js",
      "**/*.init.js",
      "**/__init__/*.js",
      "server/util/*.js",
      "server/util/__tests__/*.js",
      "lib/react-intl-test*.js",
      "lib/auth/auth0.js",
      "server/config.js",
      "components/examples/**/*.js",
      "**/*-md.js",
      "pages/_*.js",
      "pages/test/**/*.js",
      "pages/todo.js",
      "pages/admin/admin.js",
      "pages/admin/goals/*.js",
      "pages/teachers/*.js",
      "pages/business/*.js",
      "pages/content/*.js",
      "server/api/image/cloudImageUpload.js",
      "server/services/email/email.js",
      "reference",
      "systemtest",
      "x",
      "public"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ]
  },
  "standard": {
    "plugins": [
      "html"
    ],
    "ignore": [
      "/e2e_tests/**/*.js"
    ],
    "parser": "babel-eslint"
  }
}
